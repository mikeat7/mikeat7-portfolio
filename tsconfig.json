{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "lib":  [
                                        "ES2021",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "module":  "ESNext",
                            "moduleResolution":  "bundler",
                            "jsx":  "react-jsx",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "src/*"
                                                  ]
                                      },
                            "types":  [
                                          "node"
                                      ],
                            "resolveJsonModule":  true,
                            "allowSyntheticDefaultImports":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "allowJs":  true,
                            "checkJs":  false
                        },
    "include":  [
                    "src",
                    "vite-env.d.ts"
                ],
    "references":  [
                       {
                           "path":  "./tsconfig.node.json"
                       }
                   ]
}
